{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }} ",
  "palette": {
    "rosewater": "#f5e0dc",
    "flamingo": "#f2cdcd",
    "pink": "#f5c2e7",
    "orange": "#cba6f7",
    "red": "#f38ba8",
    "maroon": "#eba0ac",
    "peach": "#fab387",
    "yellow": "#f9e2af",
    "green": "#a6e3a1",
    "teal": "#94e2d5",
    "sky": "#89dceb",
    "sapphire": "#74c7ec",
    "blue": "#89b4fa",
    "lavender": "#b4befe",
    "text": "#cdd6f4",
    "subtext1": "#bac2de",
    "subtext0": "#a6adc8",
    "overlay2": "#9399b2",
    "overlay1": "#7f849c",
    "overlay0": "#6c7086",
    "surface2": "#585b70",
    "surface1": "#45475a",
    "surface0": "#313244",
    "base": "#1e1e2e",
    "mantle": "#181825",
    "crust": "#11111b"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "p:blue",
          "foreground": "transparent",
          "powerline_symbol": "",
          "leading_powerline_symbol": "",
          "properties": {
            "home_icon": "~",
            "style": "full"
          },
          "style": "powerline",
          "template": "  {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "p:green",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:peach{{ end }}",
            "{{ if gt .Ahead 0 }}p:teal{{ end }}",
            "{{ if gt .Behind 0 }}p:sapphire{{ end }}"
          ],
          "foreground": "transparent",
          "powerline_symbol": "",
          "properties": {
            "branch_icon": " ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}{{ if gt .Behind 0 }} ⇣ {{ .Behind }} {{ end }}{{ if gt .Ahead 0 }} ⇡ {{ .Ahead }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "transparent",
          "foreground_templates": ["{{ if gt .Code 0 }}p:red{{ end }}"],
          "foreground": "p:green",
          "style": "plain",
          "template": " {{ if gt .Code 0 }} {{ reason .Code }}{{ end }} ",
          "type": "status"
        },
        {
          "background": "p:orange",
          "foreground": "transparent",
          "powerline_symbol": "",
          "leading_powerline_symbol": "",
          "style": "powerline",
          "template": " {{ .FormattedMs }}  ",
          "type": "executiontime"
        },

        {
          "background": "p:teal",
          "foreground": "transparent",
          "powerline_symbol": "",
          "leading_powerline_symbol": "",
          "style": "powerline",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}p:sapphire{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:peach{{end}}",
            "{{if eq \"Full\" .State.String}}p:green{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}% ",
          "properties": {
            "discharging_icon": " ",
            "charging_icon": " ",
            "charged_icon": " ",
            "not_charging_icon": " "
          },
          "type": "battery"
        },
        {
          "background": "p:yellow",
          "foreground": "transparent",
          "powerline_symbol": "",
          "leading_powerline_symbol": "",
          "style": "powerline",
          "template": "  ",
          "type": "root"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "background": "transparent",
          "foreground_templates": [
            "{{if gt .Code 0}}p:red{{end}}",
            "{{if eq .Code 0}}p:pink{{end}}"
          ],
          "template": "❯"
        }
      ]
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground_templates": [
      "{{if gt .Code 0}}p:red{{end}}",
      "{{if eq .Code 0}}p:pink{{end}}"
    ],
    "template": "❯ "
  },
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "p:pink",
    "template": "❯❯ "
  }
}
