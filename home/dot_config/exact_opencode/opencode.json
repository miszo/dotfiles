{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "github-copilot/claude-sonnet-4.5",
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "bash": {
      "*": "ask",
      "git status": "allow"
    },
    "lsp": "allow",
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**"
    ]
  },
  "command": {
    "git-commit": {
      "template": "git add all changes && git commit A good commit message with conventional commits style && git push",
      "description": "Generates a git commit message based on the changes made",
      "agent": "build"
    },
    "lint": {
      "template": "Run the projects linter on the codebase and fix any issues found. ESLint for JS/TS",
      "description": "Lints the codebase and fixes issues",
      "agent": "build"
    }
  },
  "mcp": {
    "sentry": {
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp",
      "enabled": false
    },
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/sse",
      "enabled": false
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer {env:GH_MCP_TOKEN}",
        "X-MCP-Toolsets": "repos,issues",
        "X-MCP-Readonly": "true"
      },
      "enabled": false
    },
    "gitlab": {
      "type": "local",
      "command": [
        "glab",
        "mcp",
        "serve"
      ],
      "enabled": false
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "playwright-mcp@latest"
      ],
      "enabled": false
    }
  },
  "keybinds": {
    "input_submit": "alt+return",
    "input_newline": "return"
  }
}
