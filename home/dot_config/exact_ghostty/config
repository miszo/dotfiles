# disable auto-update - handled by homebrew
auto-update = off

# fonts
font-family = MonoLisa Variable
font-family = Symbols Nerd Font Mono
font-size = 14
font-feature = +calt,+liga,+ss02
adjust-underline-position = 4

# mouse
mouse-hide-while-typing = true

# theme
theme = Catppuccin Mocha
cursor-style = bar
cursor-style-blink = false
background-opacity = 1
background-blur = 0

# window
gtk-single-instance = true
gtk-tabs-location = bottom
gtk-wide-tabs = false
gtk-titlebar = false
window-padding-y = 2,0
window-padding-balance = true
macos-titlebar-style = hidden

# other
copy-on-select = clipboard
shell-integration = zsh
shell-integration-features = cursor,sudo,title
macos-option-as-alt = true
macos-auto-secure-input = true

# keybindings
keybind=super+shift+w=close_window
keybind=super+shift+n=new_window
keybind=super+ctrl+d=new_split:right
keybind=super+alt+d=new_split:down
keybind=super+shift+r=reload_config

keybind=super+m=unbind
keybind=super+enter=unbind
keybind=super+ctrl+f=unbind

config-file = ?config-zsh
config-file = ?config-tmux
