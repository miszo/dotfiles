# gem --version of 3.x (NOTE: Copy exactly with ID and Secret given below)
---
:backtrace: false
:bulk_threshold: 1000
:sources:
- https://rubygems.org/
- s3://{{ onepasswordRead "op://Employee/gemsrc/s3_source" .opWorkAccount | trim }}/
:update_sources: true
:verbose: true
s3_source: {
  {{ onepasswordRead "op://Employee/gemsrc/s3_source" .opWorkAccount | trim }}: {
    id: {{ onepasswordRead "op://Employee/gemsrc/username" .opWorkAccount | quote }},
    secret: {{ onepasswordRead "op://Employee/gemsrc/credential" .opWorkAccount | quote }},
    region: {{ onepasswordRead "op://Employee/gemsrc/region" .opWorkAccount | quote }},
    endpoint: {{ onepasswordRead "op://Employee/gemsrc/endpoint" .opWorkAccount | quote }}
  }
}
